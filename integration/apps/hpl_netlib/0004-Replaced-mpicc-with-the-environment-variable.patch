index 87d7191..36403d4 100644
--- a/Make.Linux_Intel64
+++ b/Make.Linux_Intel64
@@ -175,7 +175,7 @@ HPL_DEFS     = $(F2CDEFS) $(HPL_OPTS) $(HPL_INCLUDES)
 # - Compilers / linkers - Optimization flags ---------------------------
 # ----------------------------------------------------------------------
 #
-CC       = mpiicc
