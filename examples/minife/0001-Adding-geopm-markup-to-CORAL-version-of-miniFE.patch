@@ -150,6 +154,9 @@ cg_solve(OperatorType& A,
 #endif
 
   for(LocalOrdinalType k=1; k <= max_iter && normr > tolerance; ++k) {
+#ifndef NO_GEOPM
+    geopm_prof_epoch();
