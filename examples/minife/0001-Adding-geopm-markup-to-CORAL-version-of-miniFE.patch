index 461bdde..0ef6065 100644
--- a/src/Makefile
+++ b/src/Makefile
@@ -16,7 +16,7 @@ MINIFE_MATRIX_TYPE = -DMINIFE_CSR_MATRIX
 
 # BG/Q
 #CFLAGS = -DIBM_HPM -qlist -qsource  -g -O3 -qsmp=omp
-CFLAGS = -qlist -qsource  -g -O3 -qsmp=omp
