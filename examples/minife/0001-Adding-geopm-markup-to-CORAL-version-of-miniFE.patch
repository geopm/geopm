 CXXFLAGS = $(CFLAGS)
 
 # To enable memory high water mark reporting uncomment the
@@ -25,15 +25,17 @@ CPPFLAGS = -I. -I../utils -I../fem $(MINIFE_TYPES) \
 	$(MINIFE_MATRIX_TYPE) \
 	-DHAVE_MPI -DMPICH_IGNORE_CXX_SEEK #-DMINIFE_REPORT_RUSAGE
 
-LDFLAGS=$(CFLAGS)
-LIBS=
+LDFLAGS=$(CFLAGS) -L$(HOME)/build/geopm/lib
