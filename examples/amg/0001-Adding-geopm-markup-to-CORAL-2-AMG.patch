--- a/test/amg.c
+++ b/test/amg.c
@@ -37,6 +37,10 @@
 
 #include <time.h>
 
+#ifdef GEOPM
+#include "geopm.h"
+#endif
+
 #ifdef __cplusplus
 extern "C" {
 #endif
@@ -136,6 +140,11 @@ main( hypre_int argc,
 
    HYPRE_Real *values;
 
