[Unit]
Description=Global Extensible Open Power Manager Service
StartLimitIntervalSec=0
StartLimitBurst=3

[Service]
Environment=PYTHONUNBUFFERED=true
ExecStart=/usr/bin/geopmd --grpc
Restart=always

[Install]
WantedBy=multi-user.target
